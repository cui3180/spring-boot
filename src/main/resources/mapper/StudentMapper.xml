<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.cui.spring.dao.mapper.StudentMapper" >
    <resultMap id="BaseResultMap" type="com.cui.spring.model.Student" >
        <id column="id" property="id" jdbcType="BIGINT" />
        <result column="student_name" property="studentName" jdbcType="VARCHAR" />
        <result column="student_phone" property="studentPhone" jdbcType="VARCHAR"/>
        <result column="student_class" property="studentClass" jdbcType="VARCHAR"/>
        <result column="teacher_id" property="teacherId" jdbcType="BIGINT"/>
        <result column="teacher_name" property="teacherName" jdbcType="VARCHAR"/>
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>
        <result column="creat_time" property="creatTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List" >
        s.id, s.student_name, s.student_phone,s.student_class,s.teacher_id,t.teacher_name,s.update_time,s.creat_time
    </sql>
    <select id="getStudentList"  resultMap="BaseResultMap" resultType="com.cui.spring.util.query.QueryStudent">
        SELECT
        <include refid="Base_Column_List"/>
        FROM student s
        LEFT JOIN teacher t
        ON s.teacher_id=t.id
        <trim prefix="where" prefixOverrides="and | or">
            <if test="id != null">
                and s.id = #{id}
            </if>
            <if test="name != null">
                and s.student_name = #{name}
            </if>
            <if test="phone != null" >
                and s.student_phone = #{phone}
            </if>
        </trim>
         ORDER BY s.id
        limit #{currentPage},#{pageSize}
    </select>

    <select id="getTeacherId" parameterType="com.cui.spring.model.Student" resultType="java.lang.Integer">
        SELECT
        count(1)
        FROM student
        WHERE
        teacher_id=#{teacherId}
    </select>

    <insert id="addStudent" parameterType="com.cui.spring.model.Student" >
        INSERT INTO
        student
        (student_name, student_phone,student_class,teacher_id,teacher_name,update_time,creat_time)
        VALUES
        (#{studentName}, #{studentPhone}, #{studentClass}, #{teacherId},#{teacherName},now(),now())
    </insert>

        <update id="updateStudent" parameterType="com.cui.spring.model.Student" >
            UPDATE
            student
            SET
            <if test="student_name != null">student_name = #{studentName},</if>
            <if test="student_phone != null">student_phone = #{studentPhone},</if>
            <if test="student_class != null">student_phone = #{studentPhone},</if>
            <if test="teacher_id != null">student_phone = #{studentPhone},</if>
            update_name=now()
            WHERE
            id = #{id}
        </update>
           <delete id="delStudent" parameterType="java.lang.Integer" >
               DELETE FROM
               student
               WHERE
               id =#{id}
           </delete>
</mapper>